<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/click_background_selected_item"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:text="SciChart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="Description:"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/search_result_item_description"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Source code:"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/search_result_item_source_code"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Keywords:"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/search_result_item_keywords"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>