<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_background"
    android:orientation="horizontal">

    <include layout="@layout/charts_2d_layout" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/main_screen_vertical_separator" />

    <include layout="@layout/charts_3d_layout" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/main_screen_vertical_separator" />

    <include layout="@layout/featured_charts_layout" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

</LinearLayout>