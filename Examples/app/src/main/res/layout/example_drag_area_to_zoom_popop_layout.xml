<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ExampleSettingsPopupStyle"
    android:orientation="vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/zoom_x_axis_only_checkbox"
        style="@style/SwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zoom_x_axis_only"
        app:theme="@style/SwitchTheme" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/zoom_extents_y_axis_checkbox"
        style="@style/SwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zoom_extents_y_axis"
        app:theme="@style/SwitchTheme" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/use_animation_checkbox"
        style="@style/SwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_animation"
        app:theme="@style/SwitchTheme" />
</LinearLayout>