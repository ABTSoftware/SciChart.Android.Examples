<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ColumnChartFillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/fillList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SciChart_ExampleSpinnerStyle"/>

        <Spinner
            android:id="@+id/textureMappingModesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SciChart_ExampleSpinnerStyle"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/horizontal"
            android:textOn="@string/vertical"
            android:id="@+id/rotate" />

    </LinearLayout>

    <com.scichart.charting.visuals.SciChartSurface
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
